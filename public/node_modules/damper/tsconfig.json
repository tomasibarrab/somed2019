{
  "compilerOptions": {
    "declaration": false,
    "outDir": "dist",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "module": "es2015",
    "moduleResolution": "node",
    "rootDirs": ["./"],
    "skipLibCheck": true,
    "strict": true,
    "typeRoots": [ "./@types", "./node_modules/@types"],
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["./src/**/*", "node_modules/@buffet/**/*", "./global.d.ts"],
  "exclude": [
    "./node_modules",
    "./dist",
  ],
}
