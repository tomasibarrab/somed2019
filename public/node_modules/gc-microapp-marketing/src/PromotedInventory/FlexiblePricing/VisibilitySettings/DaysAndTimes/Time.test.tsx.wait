import { mount } from 'enzyme';
import React, { Children } from 'react';
import { timesOrdering } from './constants';
import Time from './Time';

jest.mock('redux-form', () => ({
  Field: ({ component }) => component({ input: { checked: true, onChange: jest.fn() } }),
}));

const renderComponent = (props: any) => mount(<Time {...props} />);

describe('<Time />', () => {
  test('renders a checkbox', () => {
    const wrapper = renderComponent({ short: 'Morning', time: 'Open - 10 am', name: 'morning' });

    const checkbox = wrapper.find('Checkbox');

    expect(checkbox.props().checked).toEqual(true);

    expect(wrapper.debug()).toMatchSnapshot();
  });
});
