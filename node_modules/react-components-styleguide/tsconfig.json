{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "outDir": "dist",
    "moduleResolution": "node",
    "lib": ["dom", "es5", "es2015", "es2016", "es2017"],
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    "allowJs": false,
    "jsx": "react",
    "removeComments": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true
  },
  "exclude": [
    "../../node_modules/**/*.test.tsx",
    "**/*.test.ts",
    "**/*.test.tsx",
    "node_modules",
    "build",
    "build-scripts",
    "coverage",
    "dist",
    "internals",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ]
}
